            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_two_wheeler_24"
                android:tint="#32CD32"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="you will get coins on every order you make."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_share_24"
                android:tint="#32CD32"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="Share the referral link with your friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_touch_app_24"
                android:tint="#32CD32"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="Your friend clicks on the link or signs up through the code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_verified_user_24"
                android:tint="#32CD32"
                android:layout_marginRight="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="Your friend gets 500 coins on sign up. You get 500 coins. You can earn discount upto â‚¹500."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/truefalse2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</ScrollView>
