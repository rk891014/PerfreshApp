<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardviev"
    android:elevation="5dp"
    android:orientation="vertical"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_gravity="top"
            android:id="@+id/rimageView1"
            android:layout_width="80dp"
            android:src="@drawable/appicon"
            android:background="#000000"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
        <TextView
            android:textSize="18dp"
            android:text="Order Detail"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/datetime"
                android:text="19-06-20  11:58:07"
                android:textColor="#000000"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/totalitems"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text="milk×4  loki×4  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/topay"
            android:layout_marginLeft="25dp"
            android:text="To Pay  "
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/totalprice"
                android:layout_marginLeft="5dp"
                android:text="98"
                android:textColor="@color/colorAccent"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/savedrs2"
                android:background="@drawable/red_circle2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Saved \n ₹10"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/status"
            android:layout_marginLeft="25dp"
            android:textColor="@color/green"
            android:textSize="18dp"
            android:text="delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/completetime"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
