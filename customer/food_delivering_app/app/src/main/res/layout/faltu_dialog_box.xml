<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:id="@+id/dialog_error_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/coinscongo"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="8dp" >
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center"
            android:text="You have Successffuly Converted your coins in money .Earn more coins and  get Discount. You can get coins by sharing app and on every order." />

    </LinearLayout>


</androidx.cardview.widget.CardView>



