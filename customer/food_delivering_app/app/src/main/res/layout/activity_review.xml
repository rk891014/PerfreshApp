<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.ReviewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reviewback"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:tint="#000"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="Product Review"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewcart1"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="View Cart"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ripple_effect"
            android:layout_gravity="right|center"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_margin="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="top"
                        android:id="@+id/rimageView1"
                        android:src="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/discount1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:src="@color/green"
                        android:text="20%\noff"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/productname1"
                        android:text="productname"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/cuttedproductprice1"
                            android:textColor="#000"
                            android:layout_marginLeft="3dp"
                            android:text="₹ 20"
                            android:textSize="14dp"
                            android:layout_gravity="center|left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/productprice1"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:text="₹ 10"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_gravity="center|left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/productquantity1"
                        android:textColor="#000"
                        android:layout_marginLeft="3dp"
                        android:text="productquantity"
                        android:textSize="14dp"
                        android:layout_gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        app:cardBackgroundColor="#34D817"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/rating2"
                                android:text="5.0"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="4dp"
                                android:gravity="top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ic_baseline_star_24"
                                android:tint="#ffffff"
                                android:layout_width="17dp"
                                android:layout_gravity="bottom"
                                android:layout_height="17dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                    <Button
                        android:id="@+id/addcart1"
                        android:background="@drawable/ripple_effect"
                        android:text="ADD CART"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="30dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginTop="2dp"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>