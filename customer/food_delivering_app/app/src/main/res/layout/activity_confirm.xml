<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ConfirmActivity"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Ocback"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:tint="#000"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="35dp"
            android:textColor="#000"
            android:text="Order Confirmation"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>



<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearorder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFB6C1"
            android:layout_margin="8dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/savedrs1"
                    android:background="@drawable/red_circle2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="25dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Saved \n â‚¹10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="To Pay :"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cuttedtopay"
                    android:text="to pay"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/topay"
                    android:text="to pay"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>
                <Button
                    android:background="@drawable/ripple_effect"
                    android:id="@+id/rohit"
                    android:text="confirm order"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="10dp"
                    android:layout_width="250dp"
                    android:layout_marginRight="3dp"
                    android:textSize="22dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Details With Us"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name  :  "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address  :  "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/caddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact no  :  "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/ccontactno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance  :  "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/cdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000" />
    </LinearLayout>
    <Button
        android:id="@+id/changedetails"
        android:text="Change Details"
        android:textSize="12dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="130dp"
        android:background="@drawable/ripple_effect"
        android:layout_height="30dp"/>
</LinearLayout>
</androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items Ordered"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordercomprec"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emptycart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"
            android:gravity="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/ordertotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
